          <div class="subtotal-table__small-space"></div>

          {% comment %} Gift card code {% endcomment %}
          <div class="one-whole column">
            <div class='giftcard__smalltext'>Use the gift card code online</div>
            <div class='giftcard__code'>
              {{ gift_card.code | format_code }}
            </div>
          </div>

          {% comment %} Action buttons {% endcomment %}
          <div class="actions__cell" style="margin: 20px auto;">
            <div class="button">
              <div class="button__cell">
                <a href="{{ shop.url }}" class="button__text">Visit online store</a>
